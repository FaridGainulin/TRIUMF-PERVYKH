.about-section
  // background-image: url('../images/about-section-bg.jpg')
  // background-repeat: no-repeat
  // background-position: center
  // background-size: cover
  background-color #fff

  &__container
    position relative
    z-index 1
    color: #000
    padding: 20px 0
    +above($breakpoints.sm)
      padding 50px 0
    +above($breakpoints.md)
      padding 70px 0
    +above($breakpoints.xxl)
      padding 120px 0 100px

  &__title,
  &__bottom
    text-align: center

  &__title
    padding-bottom 15px
    +above($breakpoints.sm)
      padding-bottom 40px
    +above($breakpoints.md)
      padding-bottom 60px
    +above($breakpoints.xxl)
      padding-bottom 88px

  &__box
    +above($breakpoints.sm)
      margin-left 350px
    +above($breakpoints.md)
      margin-left 505px
    +above($breakpoints.xxl)
      margin-left 600px

  &__cards
    +above($breakpoints.sm)
      display: flex
      flex-direction: column
      gap: 20px
    +above($breakpoints.md)
      gap: 30px
    +above($breakpoints.xxl)
      gap: 40px

  &__card
    width 280px !important
    display: flex
    flex-direction: column
    align-items: center
    gap: 5px
    letter-spacing: -0.9px
    text-align: center
    +above($breakpoints.sm)
      text-align: start
      letter-spacing: 0
      flex-direction: row
      align-items: flex-start
      width max-content !important
      gap: 10px
    +above($breakpoints.md)
      gap: 15px
    +above($breakpoints.xxl)
      height: 75px
      gap: 20px

  &__card-icon
    width 25px
    height: 25px
    +above($breakpoints.sm)
      width 30px
      height: 30px
    +above($breakpoints.md)
      width 35px
      height: 35px
    +above($breakpoints.xxl)
      width 40px
      height: 40px

  &__line
    display: none
    +above($breakpoints.sm)
      display: block
      margin 30px auto 20px
      height: 2px
      background-color #0476FE
      border-radius: 2px
      width 130px
    +above($breakpoints.md)
      margin 40px auto 25px
      width 150px
      height: 3px
    +above($breakpoints.xxl)
      margin 58px auto 38px
      width 178px
      height: 4px

  &__bottom
    display: flex
    flex-direction: column
    align-items: center
    gap: 10px
    +above($breakpoints.sm)
      gap: 15px
    +above($breakpoints.md)
      gap: 17px
    +above($breakpoints.xxl)
      gap: 20px

  &__bottom-text
    padding-right 80px
    +above($breakpoints.sm)
      padding-right 0

  &__form
    width 100%
    display: flex
    flex-direction: column
    align-items: center
    gap: 5px
    +above($breakpoints.sm)
      width 550px
      flex-direction: row
      flex-wrap: wrap
      gap: 8px
    +above($breakpoints.md)
      width 730px
      gap: 9px
    +above($breakpoints.xxl)
      width 887px
      gap: 10px
    input,
    button
      width 280px !important
      +above($breakpoints.sm)
        width 178px !important
      +above($breakpoints.md)
        width 237px !important
      +above($breakpoints.xxl)
        width 289px !important
        height: 69px !important

  &__img
    position: absolute
    z-index -1
    width: 100px;
    height: auto;
    top: 160px;
    left: 213px;
    +above($breakpoints.sm)
      width: 420px;
      top: 130px;
      left: -60px;
    +above($breakpoints.md)
      width: 540px;
      top: 180px;
      left: -27px;
    +above($breakpoints.xxl)
      width 686px
      top: 253px
      left: -66px
