    .details-section__container
      img.details-section__img-1(src="images/details-section-img-1.png" loading="lazy" width="1222" height="1032" alt="image")
      img.details-section__img-2(src="images/details-section-img-2.png" loading="lazy" width="360" height="348" alt="image")
