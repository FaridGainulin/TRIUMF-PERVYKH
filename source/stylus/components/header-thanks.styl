.header-thanks
  &__container
    display: flex
    justify-content space-between
    align-items: center

  &__brand-block
    +above($breakpoints.sm)
      display: flex
      align-items: center
      gap: 10px
    +above($breakpoints.md)
      gap: 15px
    +above($breakpoints.xxl)
      gap: 20px

  &__brand
    display: none
    +above($breakpoints.sm)
      display: flex
      flex-direction: column
      gap: 6px
    +above($breakpoints.md)
      gap: 8px
    +above($breakpoints.xxl)
      gap: 10px

  &__logo
    width 70px
    height: 70px
    +above($breakpoints.sm)
      width 90px
      height: 90px
    +above($breakpoints.md)
      width 105px
      height: 105px
    +above($breakpoints.xxl)
      width 120px
      height: 120px

  &__connection
    display: flex
    align-items: center
    gap: 6px
    +above($breakpoints.sm)
      gap: 10px;
    +above($breakpoints.md)
      gap: 15px;
    +above($breakpoints.xxl)
      gap: 20px

  &__connection-icon
    width 18px
    height: 18px
    +above($breakpoints.sm)
      width 20px
      height: 20px
    +above($breakpoints.md)
      width 22px
      height: 22px
    +above($breakpoints.xxl)
      width 24px
      height: 24px
