  transition border-color 0.3s, box-shadow 0.3s, border 0.3s, background 0.3s
  &:hover
    border 1px solid #1990FC
  &:focus
    color: #211F1E
    caret-color: #1990FC
    border 1px solid #1990FC
    box-shadow: 3px 3px 8px 0px #1990FC
    background: #fff
    &::placeholder
      color: #211F1E
  &::placeholder
    color: #211F1E
  +above($breakpoints.sm)
    padding: 0 15px;
    font-size: 14px;
    height: 55px
  +above($breakpoints.md)
    padding: 0 17px;
    font-size: 16px;
    height: 65px
  +above($breakpoints.xxl)
    padding: 0 20px;
    font-size: 18px;
    height: 70px
  &.error
    border 1px solid $color-error
    color: $color-error
    caret-color: $color-error
    box-shadow: 0px 0px 22px 0px $color-error
    background: #fff
    &::placeholder
      color: $color-error
    &::-ms-input-placeholder
      color: $color-error
    animation: shake 0.6s;
    @keyframes shake
      10%, 90%
        transform: translate3d(-1px, 0, 0)
      20%, 80%
        transform: translate3d(2px, 0, 0)
      30%, 50%, 70%
        transform: translate3d(-4px, 0, 0)
      40%, 60%
        transform: translate3d(4px, 0, 0)

  &--white
    color: #fff
    background-color transparent
    &:focus
      color: #fff
      background: transparent
      &::placeholder
        color: #fff
    &::placeholder
      color: #fff
    &.error
      background: transparent

  &--about
    font-family: 'Roboto-Regular'
    font-weight: 300
    padding: 0 36px;
    color: #30302E
    border: 1px solid #F5F6F9
    background: #F5F6F9
    &:focus
      background: #F5F6F9
      &::placeholder
        color: #30302E
    &::placeholder
      color: #30302E
    +above($breakpoints.xxl)
      padding: 0 36px;
      height: 69px
    &.error
      background: #F5F6F9

  &--textarea
    outline none
    border: none
    padding: 10px 10px 10px 36px
    resize: none
    height: 70px
    border-radius: 8px
    width 280px
    +above($breakpoints.sm)
      width 100%
      border-radius: 12px
      padding: 15px 10px 10px 15px
      height: 80px
    +above($breakpoints.md)
      border-radius: 13px
      padding: 17px 10px 10px 17px
      height: 90px;
    +above($breakpoints.xxl)
      border-radius: 14px
      padding: 26px 10px 10px 36px
      height: 101px

  &--city
    color: #000
    padding: 0 29px;
    font-family: 'Roboto-Regular'
    font-weight: 400
    border: 1px solid #000
    background: transparent
    &:focus
      color: #000
      background: transparent
      &::placeholder
        color: #000
    &::placeholder
      color: #000
    +above($breakpoints.sm)
      padding: 0 20px;
      height: 60px
    +above($breakpoints.md)
      padding: 0 25px;
      height: 70px
    +above($breakpoints.xxl)
      padding: 0 29px;
      height: 80px
    &.error
      background: transparent
